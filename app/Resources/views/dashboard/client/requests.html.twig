{% set li_class='treeview-active' %}
{% set display='block' %}
{% set ul_class='treeview-menu menu-open' %}


{% set settings_li_class='treeview' %}
{% set settings_display='none' %}
{% set settings_ul_class='treeview-menu ' %}

{% set cost_li_class='treeview' %}
{% set cost_display='none' %}
{% set cost_ul_class='treeview-menu ' %}

{% set tab_requests='' %}
{% set arrow='down' %}


{% extends 'dashboard/base.html.twig' %}
{% block contentHeader %}Requests{% endblock %}
{% block contentDescription %}Received pending requests{% endblock %}
{% block content %}

    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title">New user requests</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table class="table table-bordered">
                        <tr>
                            <th style="width: 10px">#</th>
                            <th>Requested on</th>
                            <th>MAC address</th>
                            <th>Name</th>
                            <th>Package</th>
                            <th></th>
                        </tr>
                        {% if requests.new is not null %}
                        {% for req in requests.new %}
                        <tr>
                            <td>{{ req.request.getRequestId }}</td>
                            <td class="col-md-2">{{ req.request.getDate|date('Y-m-d H:i:s') }}</td>
                            <td class="col-md-2">{{ req.request.getRequestData.mac }}</td>
                            <td>{{ req.request.getRequestData.name }}</td>
                            <td class="col-md-1">{{ (req.request.getRequestData.package/1000000.0)|number_format(2, '.', ',') }} Gb</td>
                            <td>
                                <div class="btn-group pull-right">
                                <button type="button" class="request-new-grant btn btn-success btn-xs"><i class="fa fa-fw fa-check"></i>Grant</button>
                                <button type="button" class="request-new-reject btn btn-danger btn-xs"><i class="fa fa-fw fa-close"></i>Reject</button>
                                </div>
                            </td>
                        </tr>
                        {% endfor %}
                        {% endif %}
                    </table>
                </div>
            </div>
            <!-- /.box -->
        </div>
    </div>



    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title">Change packages</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table class="table table-bordered">
                        <tr>
                            <th style="width: 10px">#</th>
                            <th>Requested on</th>
                            <th>Name</th>
                            <th>Requested Package</th>
                            <th>Current Package</th>
                            <th></th>
                        </tr>
                        {% if requests.change is not null %}
                            {% for req in requests.change %}
                                <tr>
                                    <td>{{ req.request.getRequestId }}</td>
                                    <td class="col-md-2">{{ req.request.getDate|date('Y-m-d H:i:s') }}</td>
                                    <td class="col-md-2">{{ req.request.getSlaveUser.name }}</td>
                                    <td class="col-md-2">{{ (req.request.getRequestData.package/1000000.0)|number_format(2, '.', ',') }} Gb</td>
                                    <td class="col-md-2">{{ (req.request.getSlaveUser.package/1000000.0)|number_format(2, '.', ',') }} Gb</td>

                                    <td>
                                        <div class="btn-group pull-right">
                                            <button type="button" class="request-new-grant btn btn-success btn-xs"><i class="fa fa-fw fa-check"></i>Grant</button>
                                            <button type="button" class="request-new-reject btn btn-danger btn-xs"><i class="fa fa-fw fa-close"></i>Reject</button>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        {% endif %}
                    </table>
                </div>
            </div>
            <!-- /.box -->
        </div>
    </div>


    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title">Messages</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table class="table table-bordered">
                        <tr>
                            <th style="width: 10px">#</th>
                            <th>Requested on</th>
                            <th>Name</th>
                            <th>Subject</th>
                            <th>Body</th>
                            <th></th>
                        </tr>
                        {% if requests.message is not null %}
                            {% for req in requests.message %}
                                <tr>
                                    <td>{{ req.request.getRequestId }}</td>
                                    <td class="col-md-2">{{ req.request.getDate|date('Y-m-d H:i:s') }}</td>
                                    <td class="col-md-2">{{ req.request.getSlaveUser.name }}</td>
                                    <td class="col-md-2">{{ req.request.getRequestData.subject }} </td>
                                    <td class="col-md-4">{{ req.request.getRequestData.body }} </td>

                                    <td>
                                        <div class="btn-group pull-right">
                                            <button type="button" class="request-new-grant btn btn-success btn-xs"><i class="fa fa-fw fa-check"></i>Grant</button>
                                            <button type="button" class="request-new-reject btn btn-danger btn-xs"><i class="fa fa-fw fa-close"></i>Reject</button>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        {% endif %}
                    </table>
                </div>
            </div>
            <!-- /.box -->
        </div>
    </div>

    <div class="modal" id="request-info">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">Ã—</span></button>
                    <h4 class="modal-title">Request Info</h4>
                </div>
                <div class="modal-body">

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-dismiss="modal">Dismiss</button>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
{% endblock %}