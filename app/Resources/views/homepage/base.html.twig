{% extends 'base.html.twig' %}

{% set body_class='hold-transition skin-blue layout-top-nav layout-boxed' %}

{% block body %}

<div class="wrapper">

    <header class="main-header">
        <nav class="navbar navbar-static-top">
            <div class="container">
                <div class="navbar-header">
                    <a href="#" class="navbar-brand"><b>Q</b>uota</a>
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse">
                        <i class="fa fa-bars"></i>
                    </button>
                </div>
             <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse pull-left" id="navbar-collapse">
                    <ul class="nav navbar-nav">
                        <li  class="{% if 'home/index' in nav_path %}active{% endif %}"><a href="{{ path('homepage') }}">Home  {% if 'home/index' in nav_path %}<span class="sr-only">(current)</span>{% endif %}</a></li>
                        <li  class="{% if 'home/social' in nav_path %}active{% endif %}"><a href="{{ path('home_social') }}">Review {% if 'home/social' in nav_path %}<span class="sr-only">(current)</span>{% endif %}</a></li>
                        <li  class="{% if 'home/about' in nav_path %}active{% endif %}"><a href="#">About {% if 'home/about' in nav_path %}<span class="sr-only">(current)</span>{% endif %}</a></li>
                    </ul>
                </div>
                <!-- Navbar Right Menu -->
                <div class="navbar-custom-menu">
                    <ul class="nav navbar-nav">
                        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                        <!-- User Account: style can be found in dropdown.less -->
                        <li class="dropdown user user-menu">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <img src="{{ app.user.picture }}" class="user-image" alt="User Image">
                                <span class="hidden-xs">{{ app.user.username }}</span>
                            </a>
                            <ul class="dropdown-menu">
                                <!-- User image -->
                                <li class="user-header">
                                    <img src="{{ app.user.picture }}" class="img-circle" alt="User Image">

                                    <p>
                                        {{ app.user.username }} - {{ app.user.zone }}
                                        <small>Quota Admin</small>
                                    </p>
                                </li>

                                <!-- Menu Footer-->
                                <li class="user-footer">
                                    <div class="pull-left">
                                        <a href="{{ path('overview') }}" class="btn btn-default btn-flat">Dashboard</a>
                                    </div>
                                    <div class="pull-right">
                                        <a href="{{ path('logout') }}" class="btn btn-default btn-flat">Sign out</a>
                                    </div>
                                </li>
                            </ul>
                        </li>
                        {% else %}

                        {% endif %}
                    </ul>
                </div>
                <!-- /.navbar-custom-menu -->
            </div>
            <!-- /.container-fluid -->
        </nav>
    </header>
    <!-- Full Width Column -->
    {% block content %}

    {% endblock %}
    <!-- /.content-wrapper -->
    <footer class="main-footer">
        <div class="container">
            <div class="pull-right hidden-xs">
                <b>Version</b> 1.7.0
            </div>
            <strong>Copyright &copy; 2016 <a href="http://edu.wearetrying.info">TRiNE Inc</a>.</strong> All rights
            reserved.
        </div>
        <!-- /.container -->
    </footer>
</div>
<!-- ./wrapper -->

{% endblock %}